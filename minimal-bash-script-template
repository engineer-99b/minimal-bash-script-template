#! /bin/sh

#------------------------------------#
#                                    |
#  Minimal script template for Bash  |
#                                    |
#            engineer-99b            |
#                                    |
# /----------------------------------#
#/

#----------------------------------------------------------------------#
# Setup
#----------------------------------------------------------------------#

NAME=$(basename $0)

HELP=$(cat << EOL
Usage: $NAME [OPTIONS]

  Options:
  -m     --minimal    Minimal mode
  -h -?  --help       Print usage instructions
EOL
)

# ...

#----------------------------------------------------------------------#
# Options
#----------------------------------------------------------------------#

MINIMAL=0

# ...

#----------------------------------------------------------------------#
# Functions
#----------------------------------------------------------------------#

evaluate_arguments()
{
	for arg in $@
	do
		case $arg in
			-h|-\?|--help) echo "${HELP[@]}" ; exit ;;

			-m|--minimal) MINIMAL=1 ;;

			# ...
		esac
	done
}

# ...

main()
{
	echo $NAME

	# ...
}

#----------------------------------------------------------------------#
# Entry point
#----------------------------------------------------------------------#

evaluate_arguments $@

main
